---
import { getCollection } from "astro:content";
import BaseLayout from "@/layouts/BaseLayout.astro";
import BlogListItem from "@/components/BlogListItem.astro";

// list the posts in reverse chronological order
const posts = (await getCollection("blog")).reverse();
---

<BaseLayout title="In the News">
	<ul role="list">
		{posts.map((post) => <BlogListItem post={post} />)}
	</ul>
</BaseLayout>
