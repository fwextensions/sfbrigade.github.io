---
interface Props {
	title: string;
	id?: string;
}

const { title, id } = Astro.props;
---

<section id={id}>
	<h2>{title}</h2>
	<div class="grid">
		<slot />
	</div>
</section>

<style>
	section:last-of-type {
		margin-bottom: 0;
	}

	h2 {
		margin-bottom: calc(2 * var(--pico-typography-spacing-vertical));
	}
</style>
