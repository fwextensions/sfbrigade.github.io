---
import { Icon } from "astro-icon/components";

interface Props {
	size?: number;
	width?: number;
	height?: number;
}

const { size, width, height } = Astro.props;

// below, set the viewBox to add 10% padding around the icon
---

<Icon name="logo-colorable"
	viewBox="-5.5 -7.4 66 88.8"
	size={size}
	width={width}
	height={height}
/>

<style>
	[data-icon] {
		color: #ddd;
		overflow: unset;
	}
</style>
